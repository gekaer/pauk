<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#ffffff" android:id="@+id/UI123">
    <ListView
            android:id="@+id/lvTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:background="@drawable/list_border"
            android:listSelector="@drawable/states_selector_list"   />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Выгружаю вагоны"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textColor="#000000"
    />
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_below="@+id/textView2" android:layout_centerHorizontal="true" android:progress="40"
            android:indeterminate="false" android:max="100"
    />

</RelativeLayout>
